<% if (!user) { %>
  <form class="flex-column" id="signup" name="signup" action="signup" method="POST">
    <% if (errors) { %>
      <ul class="errors">
        <% errors.forEach(error => { %>
          <li><%= error %></li>
        <% }) %>
      </ul>
    <% } %>      
    <input type="text" name="username" placeholder="Username">
    <input type="text" name="email" placeholder="Email">
    <input type="password" name="password" placeholder="Password" value="user2">
    <button>Sign up</button>
  </form>
<% } %>

